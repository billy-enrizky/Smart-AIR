<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
    android:background="@color/white">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"
            android:textStyle="bold"  android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewDecision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Decision"
            android:textSize="18sp"
            android:textStyle="bold"  android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewRedFlags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="14sp"  android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="14sp"  android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewPEF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="14sp"
            android:visibility="gone"  android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewRescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="14sp"
            android:visibility="gone"  android:textColor="#000000"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

